{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build SerialPort_server.cpp",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "SerialPort_server.cpp",
        "-I${workspaceFolder}/include",
        "-o",
        "SerialPort_server.exe",
        "-lws2_32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
